<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <EditText
        android:id="@+id/action_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        android:hint="Item Name"
        android:inputType="text"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:imeOptions="actionSearch"
        android:paddingRight="10dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/FrameLayoutItems"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/action_search">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemSearchList"
            android:layout_below="@+id/action_search"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_gravity="center"/>
    </FrameLayout>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OK"
        android:foregroundGravity="bottom|center_horizontal|right"
        android:layout_gravity="bottom"
        android:layout_toRightOf="@+id/cancel_button"
        android:layout_toEndOf="@+id/cancel_button"
        android:layout_below="@+id/FrameLayoutItems"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:foregroundGravity="left|bottom|center_horizontal"
        android:elegantTextHeight="false"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="107dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/FrameLayoutItems"/>


</RelativeLayout>