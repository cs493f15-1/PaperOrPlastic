<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:fillViewport="true"
                android:rowCount="8">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:layout_marginTop="31dp"
        android:background="#bcbcbc"
        android:editable="true"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bContinue"
        android:layout_alignEnd="@+id/bContinue"
        android:layout_alignLeft="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_marginTop="28dp"
        android:background="#bcbcbc"
        android:textColor="#000000"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignRight="@+id/bContinue"
        android:layout_alignEnd="@+id/bContinue"
        android:layout_alignLeft="@+id/bRecoverPassword"
        android:layout_alignStart="@+id/bRecoverPassword"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bSignIn"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignLeft="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_marginTop="51dp"
        android:text="@string/sSignIn"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sCreateAccount"
        android:id="@+id/bCreateAccount"
        android:layout_alignTop="@+id/bSignIn"
        android:layout_alignRight="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sRecoverPass"
        android:id="@+id/bRecoverPassword"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sContinue"
        android:id="@+id/bContinue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sRememberPass"
        android:id="@+id/cbRememberPassword"
        android:layout_above="@+id/bCreateAccount"
        android:layout_alignLeft="@+id/bSignIn"
        android:layout_alignStart="@+id/bSignIn"
        android:checked="false"
        android:enabled="false"
        android:textColor="@color/ccBlack"/>

</RelativeLayout>


